{% extends "layout.njk" %}

{% block title %}
 - {{recipe.title}}
{% endblock %}

{% block content %}
    <div class="recipe-page">
        <div class="recipe-image lg-image">
            <img src="{{recipe.image}}" alt="Image of {{recipe.image}}">
        </div>
        <div class="recipe-name">
            <h1>{{recipe.title}}</h1>
        </div>
        <div class="recipe-info">
            <p>by {{recipe.author}}</p>
        </div>
        <section>
            <div class="section-heads">
                <h2>Ingredients</h2>
                <span id="ingredients">SHOW</span>
            </div>
            <div class="ingredients hidden">
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="section-heads">
                <h2>Preparation mode</h2>
                <span id="preparation-mode">SHOW</span>
            </div>
            <div class="preparation-mode hidden">
                {% for preparation in recipe.preparation %}
                    <p>{{preparation}}</p>
                {% endfor %}
            </div>
            <div class="section-heads">
                <h2>Additional Information</h2>
                <span id="additional-information">SHOW</span>
            </div>
            <div class="additional-information hidden">
                <p>{{recipe.information}}</p>
            </div>
        </section>
    </div>

    <script src="/scripts.js"></script>
{% endblock %}