{% extends 'layout.njk' %}

{% block title %}
School - Students
{% endblock %}

{% block content %}
<div class="title">
    <h1>Edit Student</h1>
</div>
<form class="card" method="POST" action="/students?_method=PUT">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat left center / cover;"></section>
    <section class="details">
        
        {% include "students/fields.njk" %}

        <input type="hidden" name="id" value="{{ student.id }}">

    </section>
</form>
{% endblock %}